@using aspnetapp.Models
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Teachers Digital Agency</title>
	<link rel="stylesheet" href="/css/site.css" asp-append-version="true" />
	<link rel="icon" href="/images/logo.png" />
</head>
<body>
	<div class="topbar">
		<a href="/"><img src="images/logo.png" /></a>
		<form action="/">
			<button type="button" onclick="dropdownClick()" style="position: relative;">+</button>
			<div class="dropdownContainer">
				<ul class="dropdownTags">
					<li>LOCATION:</li>
					<li><input placeholder="Input location…" name="location" type="text" minlength="0" maxlength="40" /></li>
					<li>PRICE:</li>
					<li><input placeholder="Input minimum price…" name="minPrice" type="number" /></li>
					<li><input placeholder="Input maximum price…" name="maxPrice" type="number" /></li>
					<li>TAGS:</li>
					@{
						foreach (Lecturer.Tag tag in Database.tags)
						{
							<li>
								<input name="tag" type="checkbox" value="@tag.name" />
								<label>@tag.name</label>
							</li>
						}
					}
				</ul>
			</div>
			<input placeholder="Input name…" name="lecName" type="search" minlength="0" maxlength="40" />
			<input type="submit" value="Search" />
		</form>
	</div>
	<div class="container">
		@RenderBody()
	</div>
	<script>
		const dropdown = document.querySelectorAll(".dropdownContainer")[0];

		function dropdownClick() {
			dropdown.classList.toggle("show");
		}
	</script>
</body>
</html>
