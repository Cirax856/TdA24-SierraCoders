@page
@model aspnetapp.Pages.Account.LoginModel
@{
}

<body>
    <script>document.getElementById("topSignInDiv").classList.toggle("selected")</script>
    <form>
        <label for="username">Username:</label>
        <input id="username" name="username" type="text" required /><br />
        <label for="password">Password:</label>
        <input id="password" name="password" type="password" required /><br />
        <input type="submit" value="Login"><br />
    </form>
    @{
        if (!string.IsNullOrWhiteSpace(Model.ErrorMesage))
        {
            <script>alert("@Model.ErrorMesage")</script>
        }
    }
</body>